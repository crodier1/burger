<div class="container">
 
  <h1 class="title">Eat Da Burger</h1>

  <div class="row">
    <div class="col-md-6">
      <h2>Burgers To Eat</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> cats/cat-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-md-6">

      <h2>Burgers Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li class="devoured">{{burger_name}}</li>
        {{/if}}
        {{/each}}
      </ul>


    </div>

  </div>





  <h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">

    <div class="form-group col-md-4">
      <label for="ca">Burger Type:</label>
      <input type="text" id="ca" name="name" class="form-control">
      <br>
<button type="submit" class="btn btn-info">Add Burger</button>
    </div>


    
    </div>
  </form>
</div>